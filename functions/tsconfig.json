{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "paths": {
      "@/constants/*": ["./src/constants/*"],
      "@/functions/*": ["./src/functions/*"],
      "@/models/*": ["./src/models/*"],
      "@/helpers/*": ["./src/helpers/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"]
}
